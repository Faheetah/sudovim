<div class="post">
<% if @search %>
  <h4><%= @search.length %> results for <%= @query.join(', ').gsub('%23','#') %></h4>
<% end %>
<% @posts.each do |post| %>
  <h3><a href="/<%= post[:id] %>/<%= post[:slug] %>"><%= post[:title] %></a> <span class="date"><%= post[:date] %></span></h3>
  <p>
    <%= post[:content] %>
    <a href="/<%= post[:id] %>/<%= post[:slug] %>">Read More</a>
  </p>
  <span class="tags">
    <% post[:tags].each do |tag| %>
      <a href="/tag/<%= tag[:link] %>"><%= tag[:tag] %></a>
    <% end %>
  </span>

<% end %>
</div>

<div class="paginate">
  <% if @paginate > 9 %>
    <a href="?p=<%= @paginate-10 %>">Prev</a>
  <% end %>
  <% if @posts.length > 9 %>
    <a href="?p=<%= @paginate+10 %>">Next</a>
  <% end %>
</div>
