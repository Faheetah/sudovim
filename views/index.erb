<% @posts.each do |post| %>
<div>
  <h3><a href="/<%= post["slug"] %>"><%= post["title"] %></a></h3>
  <p><%= post["date"] %></p>
  <p>
    <% if post["content"].length > 140 %>
    <%= post["content"].slice(0,137)+"..." %>
    <% else %>
    <%= post["content"] %>
    <% end %>
  </p>
</div>
<% end %>

<% if @paginate > 9 %>
<a href="/p/<%= @paginate-10 %>">Prev</a>
<% end %>
<% if @posts.length > 9 %>
<a href="/p/<%= @paginate+10 %>">Next</a>
<% end %>
